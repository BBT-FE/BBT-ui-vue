.filter--wrapper {
  height: 44px;
  width: 100%;
  position: relative;
  display: flex;
  background: #ffffff;
  .filter--item {
    flex:1;
    text-align: center;
    .title--wrapper {
      padding: 15px 0px;
      box-sizing: border-box;
      .right--trangle {
        display: inline-block;
        position: relative;
        top: 0px;
        margin-left: 6px;
        border: 3px solid transparent;
        border-top-color: #333333;
        transition: all .3s;
      }
    }
    .selected {
      color: #3E81F1;
      .right--trangle {
        border-top-color: #3E81F1;
        transform: rotate(-180deg);
        top: -3px;
      }
    }
  // for bottom section style
    .section--wrapper {
        position: absolute;
        top: 44px;
        right: 0px;
        left: 0px;
        transition: all 0s;
        z-index: -1;
        &.fade-active-enter{
        }
        &.fade-active-leave{
          //opacity: 0;
          tansform: tanslateY(-100%);
        }
    }
    //.section--single {
    //  &::after{
    //    display: none
    //  }
    //
    //}
  }
}

