.baobab-toast {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60px 0 40px;
  box-sizing: border-box;
  pointer-events: none;
}

.baobab-toast.top {
  align-items: flex-start;
}

.baobab-toast.bottom {
  align-items: flex-end;
}

.baobab-toast.center {
  align-items: center;
}

.baobab-toast--main {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24px 24px 20px;
  background-color: #333;
  border-radius: 4px;
  box-sizing: border-box;
}

.baobab-toast--main.onlyText {
  max-width: 208px;
  padding: 14px 0;
  border-radius: 6px;
  text-align: center;
  word-wrap: break-word;
}

.baobab-toast--icon {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10px;
  border: 1px solid #fff;
  border-radius: 50%;
  width: 36px;
  height: 36px;
}

.baobab-toast--main.wifi .baobab-toast--icon {
  width: 40px;
  height: 40px;
  border-radius: 0;
  border: 0;
}

.baobab-toast--main.loadingB .baobab-toast--icon {
  border-radius: 0;
  border: 0;
}

.baobab-toast--main.loadingA .baobab-toast--icon {
  border-radius: 0;
  border: 0;
  margin-bottom: 0;
}

.baobab-toast--icon i.icon--success {
  position: absolute;
  left: 8px;
  top: 9px;
  width: 20px;
  height: 10px;
  border-left: 1px solid #fff;
  border-bottom: 1px solid #fff;
  border-right: 0;
  border-top: 0;
  transform: rotate(-45deg);
}

.baobab-toast--icon i.icon--failure {
  position: absolute;
  width: 100%;
  height: 100%;
  transform: rotate(45deg);
}

.baobab-toast--icon i.icon--failure:before {
  position: absolute;
  content: "";
  height: 1px;
  width 19px;
  background-color: #fff;
  left: 9px;
  top: 18px;
}

.baobab-toast--icon i.icon--failure:after {
  position: absolute;
  content: "";
  height: 18px;
  width 1px;
  background-color: #fff;
  left: 18px;
  top: 9px;
}

.baobab-toast--icon i.icon--wifi {
  display: inline-block;
  width: 100%;
  height: 100%;
  background: url(../wifi.svg) no-repeat;
  background-position: center;
}

.baobab-toast--icon i.icon--loadingA {
  display: inline-block;
  width: 32px;
  height: 32px;
  background: url(../loading-spinner.svg) no-repeat;
  background-position: center;
  background-size: 100%;
  animation: loading 2.5s linear infinite;
}

@keyframes loading {
  from {
    transform: rotate(0);
  }

  to {
    transform: rotate(360deg);
  }
}

.baobab-toast--content {
  padding-left: 20px;
  padding-right: 20px;
  color: #fff;
  font-size: 16px;
  line-height: 22px;
}
