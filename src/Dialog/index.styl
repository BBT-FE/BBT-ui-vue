.baobab-dialog {
  display: flex;
  justify-content: center;
  align-items:center;
  width: 100%;
  height: 100%;
}

.baobab-dialog--main {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
}

.baobab-dialog--bd {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30px 30px 0;
  width: 100%;
  box-sizing: border-box;
}

.baobab-dialog--title {
  font-size: 17px;
  color: #333;
  line-height: 20px;
}

.baobab-dialog--content {
  display: flex;
  justify-content: center;
  padding-bottom: 36px;
  width: 100%;
  box-sizing: border-box;
  font-size: 15px;
  color: #666;
}

.baobab-dialog--buttons {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
  padding: 0 15px;
  margin-bottom: 30px;
  .baobab-dialog--button {
    display: inline-block;
    position: relative;
    text-align: center;
    height: 44px;
    line-height: 44px;
    font-size: 16px;
    box-sizing: border-box;
    border-radius: 20px;
    border: 1px solid #2068D1;
    color: #2068D1;
  }
}

.baobab-dialog--separator .baobab-dialog--button:nth-child(1) {
}

.baobab-dialog--separator .baobab-dialog--button:nth-child(2) {
  background-color: #2068D1;
  color: #fff;
}

.baobab-dialog--prompt {
  width: 100%;
  border: 1px solid #ccc;
  height: 25px;
  outline: none;
}
