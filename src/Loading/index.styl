.Loading {
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
}

.Loading--main {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 80px;
  height: 80px;
  background-color: #333;
  background-opacity: .95;
  border-radius: 4px;
}

.Loading--main.Loading--main-message {
  width: 112px;
  height: 112px;
}

.Loading--message {
  color: #fff;
  margin-top: 10px;
  font-size: 16px;
}
