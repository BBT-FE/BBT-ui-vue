.modal--btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  font-size: 15px;
  background: #e5e5e5;
  border-radius: 5px;
  margin: 50px 20px;
  text-align: center;
}

.modal--dialog {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal--dialog-main {
  padding: 20px 40px;
  background-color: #fff;
}

.modal--dialogC {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  padding: 0 44px;
  box-sizing: border-box;
}

.modal--dialogC-title {
  margin-top: 50px;
  width: 100%;
  height: 44px;
  line-height: 44px;
  font-size: 16px;
  text-align: center;
  color: #333;
  border-bottom: 1px solid #e6e6e6;
}

.modal--dialogC-desc {
  display: flex;
  margin-top: 16px;
  font-size: 14px;
  color: #666;
}



.modal--dialog--close {
  position: absolute;
  bottom: 50px;
  width: 30px;
  height: 30px;
  transform: rotate(45deg)
  &:before {
    position: absolute;
    content: "";
    left: 0px;
    top: 15px;
    width: 30px;
    height: 1px;
    background-color: #cacaca;
  }

  &:after {
    position: absolute;
    top: 0px;
    right: 15px;
    content: "";
    width: 1px;
    height: 30px;
    background-color: #cacaca;
  }
}
